// Firebase Security Rules for MoodFlow
// Copy these to your Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Mood entries collection
    match /moodEntries/{entryId} {
      // Allow read if authenticated and owns the entry
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Allow create if authenticated and setting own userId
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'mood', 'intensity', 'timestamp', 'source']);
      
      // Allow update if authenticated and owns the entry
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Allow delete if authenticated and owns the entry
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // AI insights collection (if you add this feature)
    match /insights/{insightId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // User profiles collection
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
